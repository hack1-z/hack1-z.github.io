  <!-- Scripts pour animations et simulation -->
  <script>
    // Désactivation du clic droit
    document.addEventListener('contextmenu', event => event.preventDefault());

    // Animation au défilement pour cartes et médias
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.opacity = 1;
          entry.target.style.transform = 'translateY(0)';
        }
      });
    });
    document.querySelectorAll('.card, .media-item').forEach(item => {
      item.style.opacity = 0;
      item.style.transform = 'translateY(50px)';
      item.style.transition = 'all 0.8s ease-out';
      observer.observe(item);
    });

    // Simulation de hacking
    document.addEventListener('DOMContentLoaded', () => {
      const terminal = document.getElementById('hack-output');
      const progress = document.querySelector('.progress');
      const percentage = document.querySelector('.percentage');

      // Simulation d'attaque
      setTimeout(() => {
        progress.style.width = '100%';
        let percent = 0;
        const interval = setInterval(() => {
          percentage.textContent = `${percent++}%`;
          if (percent > 100) clearInterval(interval);
        }, 30);
      }, 2000);

      // Génération de commandes aléatoires
      const commands = [
        'nmap -sS 192.168.1.0/24',
        'hydra -L users.txt -P passwords.txt ssh://target',
        'sqlmap -u "http://test.com?id=1" --dbs',
        'msfconsole -q -x "use exploit/windows/smb/eternalblue"'
      ];
      let delay = 4000;
      commands.forEach((cmd) => {
        setTimeout(() => {
          const p = document.createElement('p');
          p.textContent = `> ${cmd}`;
          p.style.opacity = '0';
          terminal.appendChild(p);
          setTimeout(() => p.style.opacity = '1', 100);
        }, delay);
        delay += 2000;
      });
    });

    // Animation pour logos partenaires
    document.querySelectorAll('.partner-logo').forEach(logo => {
      logo.style.opacity = '0';
      logo.style.transform = 'scale(0.8)';
      const observerLogo = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            logo.style.opacity = '1';
            logo.style.transform = 'scale(1)';
            logo.style.transition = 'all 0.5s ease';
          }
        });
      });
      observerLogo.observe(logo);
    });
  </script>
